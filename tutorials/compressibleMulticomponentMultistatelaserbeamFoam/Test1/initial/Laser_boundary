FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 0.0;

boundaryField
{
    top
    {
        type            fixedValue;
        value           uniform -1;
    }
    
    bottom
    {
        type            fixedValue;
        value           uniform -1;
    }
    
    right
    {
        type            fixedValue;
        value           uniform -1;
    }

    left
    {
        type            fixedValue;
        value           uniform -1;
    }
    
    front
    {
        type            fixedValue;
        value           uniform -1;
    }
    
    back
    {
        type            fixedValue;
        value           uniform 1;
    }
    
}


